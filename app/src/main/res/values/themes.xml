<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskManagerAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Dark brand color. -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background -->
        <item name="background">@color/white</item>
        <item name="backgroundColor">@color/white_pure</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.TaskManagerAndroidNoActionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Dark brand color. -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background -->
        <item name="background">@color/white</item>
        <item name="backgroundColor">@color/white_pure</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="outlineButton" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/primary_dark</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="boxStrokeColor">@color/primary_dark</item>
        <item name="boxStrokeErrorColor">@color/danger</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="startIconTint">@color/primary_dark</item>
        <item name="errorEnabled">true</item>
    </style>
</resources>