<resources>
    <!-- Base application theme. -->
    <item name="logo_04" type="drawable">@drawable/logo_02</item>
    <item name="ic_baseline_light_mode_24" type="drawable">@drawable/ic_baseline_dark_mode_24</item>

    <style name="Theme.TaskManagerAndroid" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary Dark brand color. -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background -->
        <item name="background">@color/black</item>
        <item name="backgroundColor">@color/black_pure</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.TaskManagerAndroidNoActionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Dark brand color. -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background -->
        <item name="background">@color/black</item>
        <item name="backgroundColor">@color/black_pure</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="outlineButton" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/primary</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeErrorColor">@color/danger</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="startIconTint">@color/primary</item>
        <item name="errorEnabled">true</item>
    </style>
</resources>